<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:gravity="center"
            android:padding="25dp"
            android:text="Simuladores"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="Crédito Hipotecario en Colombia"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="* Valor de la propiedad"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/valorPropiedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:drawablePadding="8dp"
            android:elevation="10dp"
            android:inputType="numberDecimal"
            android:padding="15dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="333dp"
            android:layout_height="50dp"
            android:text="El valor de la propiedad no puede ser inferior a $70.000.000"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:text="* ¿Cuánto necesitas?"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/montoPrestamo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:inputType="numberDecimal"
            android:padding="15dp"
            android:textSize="16sp"
            android:elevation="10dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="El préstamo mínimo es de $50.000.000 y no puede exceder el 70% del valor de la propiedad para creditos hipotecarios, mientras para leasinghabitacional no puede exceder el 80% del valor de la propiedad."
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:text="* ¿A qué plazo necesitas el crédito (años)?"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/plazo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:inputType="number"
            android:padding="15dp"
            android:textSize="16sp"
            android:elevation="10dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Van desde los 5 hasta los 20 años. El plazo más común es de 20 años."
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:text="* ¿A qué tasa de interés efectiva anual (TAE)?"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tasaInteres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:inputType="numberDecimal"
            android:padding="15dp"
            android:textSize="16sp"
            android:elevation="10dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Esta tasa depende de tu historial crediticio y del banco en el que pidas el crédito."
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/red"
            android:text="Simular"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:textSize="16sp"
            android:textStyle="bold" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp" />

    </LinearLayout>
</ScrollView>
